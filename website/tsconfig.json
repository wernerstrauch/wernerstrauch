{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@lib/*": ["./src/lib/*"],
      "@config": ["./src/config.ts"],
      "@config/*": ["./src/config/*"],
      "@styles/*": ["./src/styles/*"],
      "@images/*": ["./src/images/*"],
      "@i18n/*": ["./src/i18n/*"],
      "@scripts/*": ["./src/scripts/*"]
    }
  }
}
