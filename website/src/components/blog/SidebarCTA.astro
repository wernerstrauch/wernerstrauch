---
/**
 * SidebarCTA Component
 *
 * Newsletter subscription box for blog sidebar.
 * Includes trust badge, headline, description, and email form.
 */
import { Icon } from "astro-icon/components";

interface Props {
  /** Headline text */
  headline?: string;
  /** Description text */
  description?: string;
  /** Button text */
  buttonText?: string;
  /** Trust badge text */
  trustBadge?: string;
  /** Form action URL (for newsletter service integration) */
  formAction?: string;
}

const {
  headline = "E-Commerce Insights",
  description = "Erhalte die neuesten Tipps f√ºr deinen Online-Shop direkt in dein Postfach.",
  buttonText = "Anmelden",
  trustBadge = "100+ zufriedene Leser",
  formAction = "#",
} = Astro.props;
---

<div class="sidebar-cta">
  {/* Decorative Image */}
  <div class="sidebar-cta__image">
    <div class="sidebar-cta__image-placeholder">
      <Icon name="heroicons:envelope" class="text-primary/30 size-12" />
    </div>
  </div>

  {/* Content */}
  <div class="sidebar-cta__content">
    {/* Trust Badge */}
    <div class="sidebar-cta__badge">
      <Icon name="heroicons:star-solid" class="size-4 text-amber-500" />
      <span>{trustBadge}</span>
    </div>

    {/* Headline */}
    <h3 class="sidebar-cta__headline">{headline}</h3>

    {/* Description */}
    <p class="sidebar-cta__description">{description}</p>

    {/* Newsletter Form */}
    <form action={formAction} method="POST" class="sidebar-cta__form">
      <label for="sidebar-email" class="sr-only">E-Mail-Adresse</label>
      <input
        type="email"
        id="sidebar-email"
        name="email"
        placeholder="Deine E-Mail"
        required
        class="sidebar-cta__input"
      />
      <button type="submit" class="sidebar-cta__button">
        {buttonText}
      </button>
    </form>
  </div>
</div>

<style>
  @reference "../../styles/styles.css";

  .sidebar-cta {
    overflow: hidden;
    border-radius: 0.75rem;
    background-color: var(--color-gray-100);
  }

  .sidebar-cta__image {
    padding: 0.25rem;
  }

  .sidebar-cta__image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100px;
    border-radius: 0.5rem;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--primary) 10%, transparent),
      color-mix(in srgb, var(--primary) 5%, transparent)
    );
  }

  .sidebar-cta__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem;
    padding-top: 0;
    text-align: center;
  }

  .sidebar-cta__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    border: 1px solid var(--primary);
    border-radius: 9999px;
    font-size: 0.75rem;
    color: var(--color-gray-600);
  }

  .sidebar-cta__headline {
    margin-top: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-gray-900);
  }

  .sidebar-cta__description {
    margin-top: 0.5rem;
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-gray-600);
  }

  .sidebar-cta__form {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
    margin-top: 1rem;
  }

  .sidebar-cta__input {
    width: 100%;
    padding: 0.625rem 0.875rem;
    border: 1px solid var(--color-gray-300);
    border-radius: 0.375rem;
    font-size: 0.9375rem;
    background-color: var(--color-white);
    text-align: center;
    transition:
      border-color 0.15s ease,
      box-shadow 0.15s ease;
  }

  .sidebar-cta__input:focus {
    border-color: var(--primary);
    outline: none;
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--primary) 15%, transparent);
  }

  .sidebar-cta__input::placeholder {
    color: var(--color-gray-400);
  }

  .sidebar-cta__button {
    width: 100%;
    padding: 0.625rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-white);
    background-color: var(--primary);
    transition:
      background-color 0.15s ease,
      transform 0.1s ease;
  }

  .sidebar-cta__button:hover {
    background-color: var(--primary-dark);
  }

  .sidebar-cta__button:active {
    transform: scale(0.98);
  }
</style>
