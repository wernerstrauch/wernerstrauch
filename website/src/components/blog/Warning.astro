---
interface Props {
  title?: string;
}

const { title = "Achtung" } = Astro.props;
---

<aside class="my-6 rounded-xl border border-amber-500/30 bg-amber-500/10 p-5">
  <div class="flex items-start gap-3">
    <div
      class="flex h-8 w-8 shrink-0 items-center justify-center rounded-lg bg-amber-500/20"
    >
      <svg
        class="h-5 w-5 text-amber-400"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"
        ></path>
      </svg>
    </div>
    <div class="flex-1">
      <p class="mb-2 font-semibold text-amber-300">{title}</p>
      <div class="text-sm text-zinc-300 [&>p]:mb-2 [&>p:last-child]:mb-0">
        <slot />
      </div>
    </div>
  </div>
</aside>
