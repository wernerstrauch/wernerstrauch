---
import Container from "@components/shared/Container.astro";
import { Icon } from "astro-icon/components";
import type { SectionVariant } from "../../types";

interface Stat {
  label: string;
  value: string;
}

interface Testimonial {
  quote: string;
  author: string;
  role: string;
  image?: string;
  logo?: string;
}

interface Props {
  sectionVariant?: SectionVariant;
  badge?: string;
  badgeIcon?: string;
  headline?: string;
  paragraphs?: string[];
  stats?: Stat[];
  testimonial?: Testimonial;
  ctaText?: string;
  ctaHref?: string;
}

const {
  sectionVariant = "light",
  badge = "Unsere Werte",
  badgeIcon = "heroicons:building-office-2-16-solid",
  headline = "Auf der Mission, E-Commerce <em>nachhaltig</em> zu stärken",
  paragraphs = [
    "<p>Wir glauben, dass erfolgreicher E-Commerce mehr ist als nur Umsatz. Es geht darum, echte Verbindungen zu Kunden aufzubauen und langfristige Beziehungen zu pflegen.</p>",
    "<p>Mit unserer Expertise in Performance Marketing, E-Mail-Automation und datengetriebener Optimierung helfen wir dir, nicht nur zu wachsen, sondern nachhaltig erfolgreich zu sein.</p>",
  ],
  stats = [
    { label: "Gegründet", value: "2021" },
    { label: "Teammitglieder", value: "12" },
    { label: "Betreute Shops", value: "150+" },
    { label: "Generierter Umsatz", value: "€25M+" },
  ],
  testimonial = {
    quote:
      "Die Zusammenarbeit hat unseren Online-Shop komplett transformiert. Innerhalb von 6 Monaten haben wir unseren Umsatz verdreifacht.",
    author: "Maria Schmidt",
    role: "CEO bei ModernShop",
    image:
      "https://images.unsplash.com/photo-1630569267625-157f8f9d1a7e?w=800&h=800&fit=crop&q=80",
  },
  ctaText = "Mehr über uns erfahren",
  ctaHref = "/ueber-uns",
} = Astro.props;

// Process headline: replace <em> tags with styled spans
const highlightStyle = `color: var(--section-accent);`;
const processedHeadline =
  headline?.replace(
    /<em>(.*?)<\/em>/g,
    `<span style="${highlightStyle}">$1</span>`,
  ) ?? "";
---

<Container>
  <div
    class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-x-8 gap-y-16 sm:gap-y-24 lg:mx-0 lg:max-w-none lg:grid-cols-2"
    data-variant={sectionVariant}
  >
    {/* Testimonial Card */}
    <div class="lg:pr-4">
      <div
        class="relative overflow-hidden rounded-3xl bg-[#1c1c1e] px-6 pt-64 pb-9 shadow-2xl sm:px-12 lg:max-w-lg lg:px-8 lg:pb-8 xl:px-10 xl:pb-10"
      >
        {/* Background Image */}
        {
          testimonial?.image && (
            <img
              src={testimonial.image}
              alt=""
              class="absolute inset-0 size-full rounded-3xl object-cover brightness-125 saturate-0"
              loading="lazy"
            />
          )
        }

        {/* Overlay */}
        <div class="absolute inset-0 bg-[#1c1c1e]/70 mix-blend-multiply"></div>

        {/* Gradient Blur */}
        <div
          aria-hidden="true"
          class="absolute top-1/2 left-1/2 -ml-16 -translate-x-1/2 -translate-y-1/2 transform-gpu blur-3xl"
        >
          <div
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
            class="testimonial-stats__gradient aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr opacity-40"
          >
          </div>
        </div>

        {/* Content */}
        <figure class="relative isolate">
          {/* Quote Icon */}
          <svg
            viewBox="0 0 162 128"
            fill="none"
            aria-hidden="true"
            class="testimonial-stats__quote-icon absolute -top-4 -left-2 -z-10 h-32"
          >
            <path
              id="quote-path"
              d="M65.5697 118.507L65.8918 118.89C68.9503 116.314 71.367 113.253 73.1386 109.71C74.9162 106.155 75.8027 102.28 75.8027 98.0919C75.8027 94.237 75.16 90.6155 73.8708 87.2314C72.5851 83.8565 70.8137 80.9533 68.553 78.5292C66.4529 76.1079 63.9476 74.2482 61.0407 72.9536C58.2795 71.4949 55.276 70.767 52.0386 70.767C48.9935 70.767 46.4686 71.1668 44.4872 71.9924L44.4799 71.9955L44.4726 71.9988C42.7101 72.7999 41.1035 73.6831 39.6544 74.6492C38.2407 75.5916 36.8279 76.455 35.4159 77.2394L35.4047 77.2457L35.3938 77.2525C34.2318 77.9787 32.6713 78.3634 30.6736 78.3634C29.0405 78.3634 27.5131 77.2868 26.1274 74.8257C24.7483 72.2185 24.0519 69.2166 24.0519 65.8071C24.0519 60.0311 25.3782 54.4081 28.0373 48.9335C30.703 43.4454 34.3114 38.345 38.8667 33.6325C43.5812 28.761 49.0045 24.5159 55.1389 20.8979C60.1667 18.0071 65.4966 15.6179 71.1291 13.7305C73.8626 12.8145 75.8027 10.2968 75.8027 7.38572C75.8027 3.6497 72.6341 0.62247 68.8814 1.1527C61.1635 2.2432 53.7398 4.41426 46.6119 7.66522C37.5369 11.6459 29.5729 17.0612 22.7236 23.9105C16.0322 30.6019 10.618 38.4859 6.47981 47.558L6.47976 47.558L6.47682 47.5647C2.4901 56.6544 0.5 66.6148 0.5 77.4391C0.5 84.2996 1.61702 90.7679 3.85425 96.8404L3.8558 96.8445C6.08991 102.749 9.12394 108.02 12.959 112.654L12.959 112.654L12.9646 112.661C16.8027 117.138 21.2829 120.739 26.4034 123.459L26.4033 123.459L26.4144 123.465C31.5505 126.033 37.0873 127.316 43.0178 127.316C47.5035 127.316 51.6783 126.595 55.5376 125.148L55.5376 125.148L55.5477 125.144C59.5516 123.542 63.0052 121.456 65.9019 118.881L65.5697 118.507Z"
            ></path>
            <use x="86" href="#quote-path"></use>
          </svg>

          {/* Logo */}
          {
            testimonial?.logo && (
              <img
                src={testimonial.logo}
                alt=""
                class="h-12 w-auto"
                loading="lazy"
              />
            )
          }

          {/* Quote */}
          <blockquote class="mt-6 text-xl/8 font-semibold text-white">
            <p>"{testimonial?.quote}"</p>
          </blockquote>

          {/* Author */}
          <figcaption class="mt-6 text-sm/6 text-gray-300">
            <strong class="font-semibold text-white">
              {testimonial?.author},
            </strong>
            {testimonial?.role}
          </figcaption>
        </figure>
      </div>
    </div>

    {/* Content Side */}
    <div>
      <div class="lg:max-w-lg">
        {/* Badge */}
        {
          badge && (
            <div class="blur-in mb-4 flex">
              <div class="testimonial-stats__badge shadow-inner-blur flex items-center rounded-full">
                <div class="flex h-full w-full items-center space-x-2 rounded-full border px-4 py-1.5">
                  <Icon
                    name={badgeIcon}
                    class="testimonial-stats__badge-icon h-4 w-4"
                  />
                  <span class="testimonial-stats__badge-text text-sm font-medium">
                    {badge}
                  </span>
                </div>
              </div>
            </div>
          )
        }

        {/* Headline */}
        <h2
          class="testimonial-stats__headline scale-up text-3xl leading-tight font-bold sm:text-4xl lg:text-5xl"
          style="transition-delay: 100ms;"
          set:html={processedHeadline}
        />

        {/* Paragraphs */}
        {
          paragraphs && paragraphs.length > 0 && (
            <div
              class="testimonial-stats__paragraphs fade-up mt-6 max-w-xl space-y-6 leading-relaxed"
              style="transition-delay: 200ms;"
              set:html={paragraphs.join("")}
            />
          )
        }
      </div>

      {/* Stats */}
      {
        stats && stats.length > 0 && (
          <dl class="testimonial-stats__stat-border mt-10 grid grid-cols-2 gap-8 border-t pt-10 sm:grid-cols-4">
            {stats.map((stat) => (
              <div>
                <dt class="testimonial-stats__stat-label text-sm/6 font-semibold">
                  {stat.label}
                </dt>
                <dd class="testimonial-stats__stat-value mt-2 text-3xl/10 font-bold tracking-tight">
                  {stat.value}
                </dd>
              </div>
            ))}
          </dl>
        )
      }

      {/* CTA Link */}
      {
        ctaText && ctaHref && (
          <div class="mt-10 flex">
            <a
              href={ctaHref}
              class="testimonial-stats__cta group inline-flex items-center gap-1 text-base/7 font-semibold transition-colors"
            >
              {ctaText}
              <Icon
                name="heroicons:arrow-right-16-solid"
                class="h-4 w-4 transition-transform group-hover:translate-x-1"
              />
            </a>
          </div>
        )
      }
    </div>
  </div>
</Container>

<style>
  /* Badge */
  [data-variant="white"] .testimonial-stats__badge,
  [data-variant="light"] .testimonial-stats__badge {
    background: rgb(from var(--section-primary) r g b / 0.1);
    border-color: rgb(from var(--section-primary) r g b / 0.3);
  }

  [data-variant="dark"] .testimonial-stats__badge {
    background: rgb(from var(--section-accent) r g b / 0.1);
    border-color: rgb(from var(--section-accent) r g b / 0.4);
  }

  [data-variant="primary"] .testimonial-stats__badge {
    background: rgb(255 255 255 / 0.1);
    border-color: rgb(255 255 255 / 0.3);
  }

  [data-variant="white"] .testimonial-stats__badge-icon,
  [data-variant="light"] .testimonial-stats__badge-icon {
    color: var(--section-primary);
  }

  [data-variant="dark"] .testimonial-stats__badge-icon {
    color: var(--section-accent);
  }

  [data-variant="primary"] .testimonial-stats__badge-icon {
    color: white;
  }

  [data-variant="white"] .testimonial-stats__badge-text,
  [data-variant="light"] .testimonial-stats__badge-text {
    color: #1c1c1e;
  }

  [data-variant="dark"] .testimonial-stats__badge-text,
  [data-variant="primary"] .testimonial-stats__badge-text {
    color: white;
  }

  /* Headline */
  [data-variant="white"] .testimonial-stats__headline,
  [data-variant="light"] .testimonial-stats__headline {
    color: #1c1c1e;
  }

  [data-variant="dark"] .testimonial-stats__headline,
  [data-variant="primary"] .testimonial-stats__headline {
    color: white;
  }

  /* Paragraphs */
  [data-variant="white"] .testimonial-stats__paragraphs,
  [data-variant="light"] .testimonial-stats__paragraphs {
    color: rgb(75 85 99);
  }

  [data-variant="white"] .testimonial-stats__paragraphs :global(strong),
  [data-variant="light"] .testimonial-stats__paragraphs :global(strong) {
    color: #1c1c1e;
  }

  [data-variant="dark"] .testimonial-stats__paragraphs {
    color: rgb(209 213 219);
  }

  [data-variant="dark"] .testimonial-stats__paragraphs :global(strong) {
    color: white;
  }

  [data-variant="primary"] .testimonial-stats__paragraphs {
    color: rgb(255 255 255 / 0.8);
  }

  [data-variant="primary"] .testimonial-stats__paragraphs :global(strong) {
    color: white;
  }

  /* Testimonial card gradient (varies by variant) */
  [data-variant="white"] .testimonial-stats__gradient,
  [data-variant="light"] .testimonial-stats__gradient {
    --tw-gradient-from: var(--section-primary);
    --tw-gradient-to: var(--section-primary-light);
  }

  [data-variant="dark"] .testimonial-stats__gradient {
    --tw-gradient-from: var(--section-accent);
    --tw-gradient-to: #9dd84f;
  }

  [data-variant="primary"] .testimonial-stats__gradient {
    --tw-gradient-from: white;
    --tw-gradient-to: rgb(229 231 235);
  }

  /* Quote icon */
  [data-variant="white"] .testimonial-stats__quote-icon,
  [data-variant="light"] .testimonial-stats__quote-icon,
  [data-variant="primary"] .testimonial-stats__quote-icon {
    stroke: rgb(255 255 255 / 0.2);
  }

  [data-variant="dark"] .testimonial-stats__quote-icon {
    stroke: rgb(from var(--section-accent) r g b / 0.2);
  }

  /* Stats border */
  [data-variant="white"] .testimonial-stats__stat-border,
  [data-variant="light"] .testimonial-stats__stat-border {
    border-color: rgb(229 231 235);
  }

  [data-variant="dark"] .testimonial-stats__stat-border {
    border-color: rgb(55 65 81);
  }

  [data-variant="primary"] .testimonial-stats__stat-border {
    border-color: rgb(255 255 255 / 0.2);
  }

  /* Stats label */
  [data-variant="white"] .testimonial-stats__stat-label,
  [data-variant="light"] .testimonial-stats__stat-label {
    color: rgb(75 85 99);
  }

  [data-variant="dark"] .testimonial-stats__stat-label {
    color: rgb(156 163 175);
  }

  [data-variant="primary"] .testimonial-stats__stat-label {
    color: rgb(255 255 255 / 0.7);
  }

  /* Stats value - use accent color */
  .testimonial-stats__stat-value {
    color: var(--section-accent);
  }

  /* CTA */
  [data-variant="white"] .testimonial-stats__cta,
  [data-variant="light"] .testimonial-stats__cta {
    color: var(--section-primary);
  }

  [data-variant="white"] .testimonial-stats__cta:hover,
  [data-variant="light"] .testimonial-stats__cta:hover {
    color: var(--section-primary-light);
  }

  [data-variant="dark"] .testimonial-stats__cta {
    color: var(--section-accent);
  }

  [data-variant="dark"] .testimonial-stats__cta:hover {
    color: #9dd84f;
  }

  [data-variant="primary"] .testimonial-stats__cta {
    color: white;
  }

  [data-variant="primary"] .testimonial-stats__cta:hover {
    color: rgb(255 255 255 / 0.8);
  }
</style>
