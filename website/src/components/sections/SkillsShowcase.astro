---
import Container from "@components/shared/Container.astro";
import { Icon } from "astro-icon/components";
import type { SectionVariant } from "../../types";

interface Skill {
  icon?: string;
  title: string;
  description: string;
  highlight?: boolean;
}

interface Props {
  sectionVariant?: SectionVariant;
  badge?: string;
  badgeIcon?: string;
  headline?: string;
  subheadline?: string;
  skills?: Skill[];
}

const {
  sectionVariant = "dark",
  badge,
  badgeIcon,
  headline = "Meine <em>Kernkompetenzen</em>",
  subheadline,
  skills = [],
} = Astro.props;

// Process headline: replace <em> tags with styled spans
const highlightStyle = `color: var(--section-accent);`;
const processedHeadline = headline.replace(
  /<em>(.*?)<\/em>/g,
  `<span style="${highlightStyle}">$1</span>`,
);
---

<div class="skills-showcase" data-variant={sectionVariant}>
  <Container class="relative">
    {/* Decorative background elements */}
    <div class="skills-bg-pattern"></div>

    {/* Header */}
    <div class="mb-16 text-center lg:mb-20">
      {badge && (
        <div class="blur-in mb-6 flex justify-center">
          <div class="skills-badge">
            {badgeIcon && <Icon name={badgeIcon} class="skills-badge-icon h-4 w-4" />}
            <span class="skills-badge-text">{badge}</span>
          </div>
        </div>
      )}

      <h2
        class="skills-headline scale-up"
        style="transition-delay: 100ms;"
        set:html={processedHeadline}
      />

      {subheadline && (
        <p class="skills-subheadline fade-up" style="transition-delay: 150ms;">
          {subheadline}
        </p>
      )}
    </div>

    {/* Skills Grid */}
    <div class="skills-grid">
      {skills.map((skill, index) => (
        <div
          class="skill-card fade-up group"
          style={`transition-delay: ${200 + index * 100}ms;`}
          data-index={index}
        >
          {/* Number indicator */}
          <div class="skill-number">
            <span>0{index + 1}</span>
          </div>

          {/* Accent line */}
          <div class="skill-accent-line"></div>

          {/* Content */}
          <div class="skill-content">
            {/* Icon */}
            {skill.icon && (
              <div class="skill-icon-wrapper">
                <Icon name={skill.icon} class="skill-icon" />
              </div>
            )}

            <h3 class="skill-title">{skill.title}</h3>
            <p class="skill-description">{skill.description}</p>
          </div>

          {/* Hover glow */}
          <div class="skill-glow"></div>
        </div>
      ))}
    </div>
  </Container>
</div>

<script>
  import "@scripts/animations";
</script>

<style>
  /* ========================================
     Main Container
     ======================================== */
  .skills-showcase {
    position: relative;
    overflow: hidden;
  }

  /* ========================================
     Background Pattern
     ======================================== */
  .skills-bg-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image:
      linear-gradient(var(--section-accent) 1px, transparent 1px),
      linear-gradient(90deg, var(--section-accent) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 50%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 60% at 50% 50%, black 20%, transparent 70%);
    pointer-events: none;
  }

  /* ========================================
     Badge Styles
     ======================================== */
  .skills-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: color-mix(in srgb, var(--section-accent) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--section-accent) 25%, transparent);
    border-radius: 9999px;
  }

  .skills-badge-icon {
    color: var(--section-accent);
  }

  .skills-badge-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--section-accent);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  /* ========================================
     Headline Styles
     ======================================== */
  .skills-headline {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: var(--section-text);
    letter-spacing: -0.02em;
  }

  .skills-subheadline {
    margin-top: 1.5rem;
    max-width: 40rem;
    margin-inline: auto;
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--section-text-muted);
  }

  /* ========================================
     Grid Layout
     ======================================== */
  .skills-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  /* ========================================
     Skill Card
     ======================================== */
  .skill-card {
    position: relative;
    padding: 2rem;
    background: var(--section-card-bg);
    border: 1px solid var(--section-card-border);
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .skill-card:hover {
    border-color: color-mix(in srgb, var(--section-accent) 40%, transparent);
    transform: translateY(-4px);
  }

  @media (min-width: 768px) {
    .skill-card {
      padding: 2.5rem;
    }
  }

  /* ========================================
     Number Indicator
     ======================================== */
  .skill-number {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 4rem;
    font-weight: 800;
    line-height: 1;
    color: transparent;
    -webkit-text-stroke: 1px color-mix(in srgb, var(--section-accent) 20%, transparent);
    opacity: 0.6;
    transition: all 0.4s ease;
    pointer-events: none;
    user-select: none;
  }

  .skill-card:hover .skill-number {
    -webkit-text-stroke: 1px color-mix(in srgb, var(--section-accent) 50%, transparent);
    opacity: 1;
    transform: scale(1.05);
  }

  @media (min-width: 768px) {
    .skill-number {
      font-size: 5rem;
      top: 2rem;
      right: 2rem;
    }
  }

  /* ========================================
     Accent Line
     ======================================== */
  .skill-accent-line {
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--section-accent),
      color-mix(in srgb, var(--section-accent) 40%, transparent)
    );
    transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0 0 3px 0;
  }

  .skill-card:hover .skill-accent-line {
    width: 100%;
  }

  /* ========================================
     Content
     ======================================== */
  .skill-content {
    position: relative;
    z-index: 10;
  }

  /* ========================================
     Icon Styles
     ======================================== */
  .skill-icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    margin-bottom: 1.25rem;
    background: color-mix(in srgb, var(--section-accent) 12%, transparent);
    border: 1px solid color-mix(in srgb, var(--section-accent) 25%, transparent);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .skill-card:hover .skill-icon-wrapper {
    background: color-mix(in srgb, var(--section-accent) 20%, transparent);
    border-color: color-mix(in srgb, var(--section-accent) 40%, transparent);
    transform: scale(1.05);
  }

  .skill-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--section-accent);
    transition: transform 0.3s ease;
  }

  .skill-card:hover .skill-icon {
    transform: rotate(-5deg);
  }

  /* ========================================
     Text Styles
     ======================================== */
  .skill-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--section-text);
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
  }

  .skill-card:hover .skill-title {
    color: var(--section-accent);
  }

  .skill-description {
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--section-text-muted);
    max-width: 90%;
  }

  @media (min-width: 768px) {
    .skill-title {
      font-size: 1.375rem;
    }

    .skill-description {
      font-size: 1rem;
    }
  }

  /* ========================================
     Hover Glow Effect
     ======================================== */
  .skill-glow {
    position: absolute;
    inset: 0;
    opacity: 0;
    background: radial-gradient(
      600px circle at 50% 100%,
      color-mix(in srgb, var(--section-accent) 8%, transparent),
      transparent 50%
    );
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .skill-card:hover .skill-glow {
    opacity: 1;
  }

  /* ========================================
     Reduced Motion
     ======================================== */
  @media (prefers-reduced-motion: reduce) {
    .skill-card,
    .skill-number,
    .skill-accent-line,
    .skill-icon-wrapper,
    .skill-icon,
    .skill-title,
    .skill-glow {
      transition: none;
    }

    .skill-card:hover {
      transform: none;
    }

    .skill-card:hover .skill-number {
      transform: none;
    }

    .skill-card:hover .skill-icon-wrapper {
      transform: none;
    }

    .skill-card:hover .skill-icon {
      transform: none;
    }
  }
</style>
