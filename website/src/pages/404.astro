---
import RootLayout from "@layouts/RootLayout.astro";
import Button from "@components/shared/Button.astro";
import { Icon } from "astro-icon/components";
import GridBackground from "@components/backgrounds/GridBackground.astro";
---

<RootLayout
  title="404 – Seite nicht gefunden | Werner Strauch"
  description="Die angeforderte Seite wurde nicht gefunden."
  headerVariant="dark"
>
  <section class="error-page" data-section-theme="dark">
    <!-- Background -->
    <div class="absolute inset-0 z-0">
      <GridBackground
        color="#c8ff00"
        glowColor="#c8ff00"
        opacity={0.08}
        gridSize={60}
        glowLines={3}
        vignette={true}
        vignetteColor="#0a1628"
      />
    </div>

    <!-- Scan Lines Overlay -->
    <div class="scan-lines" aria-hidden="true"></div>

    <!-- Content -->
    <div class="error-content relative z-10">
      <!-- Error Code with Glitch Effect -->
      <div class="error-code-wrapper">
        <span class="error-code" data-text="404">404</span>
      </div>

      <!-- Status Badge -->
      <div class="error-badge">
        <Icon name="heroicons:exclamation-triangle-16-solid" class="h-4 w-4" />
        <span>SEITE NICHT GEFUNDEN</span>
      </div>

      <!-- Message -->
      <h1 class="error-headline">
        Diese Seite existiert <span class="text-accent">nicht</span>
      </h1>

      <p class="error-description">
        Die angeforderte URL konnte nicht gefunden werden. Möglicherweise wurde die Seite verschoben,
        umbenannt oder existiert nicht mehr.
      </p>

      <!-- Actions -->
      <div class="error-actions">
        <Button href="/" variant="primary" size="lg">
          <Icon name="heroicons:home-16-solid" class="h-4 w-4" />
          <span>Zur Startseite</span>
        </Button>
        <Button href="/kontakt" variant="secondary-dark" size="lg" showArrow={false}>
          <span>Kontakt aufnehmen</span>
          <Icon name="heroicons:arrow-right-16-solid" class="h-4 w-4" />
        </Button>
      </div>

      <!-- Quick Links -->
      <div class="error-links">
        <p class="error-links-label">Oder besuchen Sie:</p>
        <div class="error-links-list">
          <a href="/ecommerce-beratung" class="error-link">
            <Icon name="heroicons:light-bulb-16-solid" class="h-4 w-4" />
            <span>E-Commerce Beratung</span>
          </a>
          <a href="/leistungen" class="error-link">
            <Icon name="heroicons:briefcase-16-solid" class="h-4 w-4" />
            <span>Leistungen</span>
          </a>
          <a href="/kontakt" class="error-link">
            <Icon name="heroicons:envelope-16-solid" class="h-4 w-4" />
            <span>Kontakt</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Decorative Corner Elements -->
    <div class="corner-accent corner-accent--top-left" aria-hidden="true"></div>
    <div class="corner-accent corner-accent--bottom-right" aria-hidden="true"></div>
  </section>
</RootLayout>

<script>
  // Display the requested path in the terminal
  const pathElement = document.getElementById('requested-path');
  if (pathElement) {
    pathElement.textContent = window.location.pathname;
  }
</script>

<style>
  /* ========================================
     404 Error Page - Industrial Terminal Style
     ======================================== */

  .error-page {
    --accent: #c8ff00;
    --navy: #0a1628;
    --navy-light: #152238;

    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--navy);
    padding: 6rem 1.5rem;
    overflow: hidden;
  }

  /* Scan Lines Effect */
  .scan-lines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.15) 2px,
      rgba(0, 0, 0, 0.15) 4px
    );
    pointer-events: none;
    z-index: 5;
    opacity: 0.5;
  }

  /* Content Container */
  .error-content {
    max-width: 640px;
    text-align: center;
  }

  /* Error Code with Glitch */
  .error-code-wrapper {
    margin-bottom: 1.5rem;
  }

  .error-code {
    font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', monospace;
    font-size: clamp(8rem, 25vw, 14rem);
    font-weight: 800;
    line-height: 1;
    color: transparent;
    background: linear-gradient(180deg, var(--accent) 0%, color-mix(in srgb, var(--accent) 60%, var(--navy)) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    position: relative;
    display: inline-block;
    letter-spacing: -0.05em;
    animation: flicker 4s infinite;
  }

  .error-code::before,
  .error-code::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, var(--accent) 0%, color-mix(in srgb, var(--accent) 60%, var(--navy)) 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }

  .error-code::before {
    animation: glitch-1 3s infinite linear alternate-reverse;
    clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
  }

  .error-code::after {
    animation: glitch-2 2.5s infinite linear alternate-reverse;
    clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
  }

  @keyframes glitch-1 {
    0%, 90%, 100% { transform: translate(0); }
    92% { transform: translate(-3px, 1px); }
    94% { transform: translate(3px, -1px); }
    96% { transform: translate(-2px, 0); }
    98% { transform: translate(2px, 1px); }
  }

  @keyframes glitch-2 {
    0%, 90%, 100% { transform: translate(0); }
    91% { transform: translate(2px, -1px); }
    93% { transform: translate(-3px, 1px); }
    95% { transform: translate(1px, 0); }
    97% { transform: translate(-2px, -1px); }
  }

  @keyframes flicker {
    0%, 100% { opacity: 1; }
    92% { opacity: 1; }
    93% { opacity: 0.8; }
    94% { opacity: 1; }
    97% { opacity: 0.9; }
    98% { opacity: 1; }
  }

  /* Error Badge */
  .error-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: color-mix(in srgb, var(--accent) 15%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent) 40%, transparent);
    color: var(--accent);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: 1.5rem;
  }

  /* Headline */
  .error-headline {
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .text-accent {
    color: var(--accent);
  }

  /* Description */
  .error-description {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    margin-bottom: 2rem;
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Terminal Block */
  .error-terminal {
    background: var(--navy-light);
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 2.5rem;
    text-align: left;
    font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', monospace;
    font-size: 0.8rem;
    overflow: hidden;
  }

  .terminal-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .terminal-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .terminal-dot--red { background: #ff5f56; }
  .terminal-dot--yellow { background: #ffbd2e; }
  .terminal-dot--green { background: #27c93f; }

  .terminal-title {
    margin-left: auto;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.7rem;
  }

  .terminal-body {
    padding: 1rem;
  }

  .terminal-body p {
    margin: 0;
    padding: 0.25rem 0;
    color: rgba(255, 255, 255, 0.8);
  }

  .terminal-prompt {
    color: var(--accent);
  }

  .terminal-command {
    color: #64b5f6;
  }

  .terminal-path {
    color: rgba(255, 255, 255, 0.6);
  }

  .terminal-error {
    color: #ff5f56;
    font-weight: 600;
  }

  .terminal-suggestion {
    color: rgba(255, 255, 255, 0.5);
  }

  /* Actions */
  .error-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    margin-bottom: 3rem;
  }

  @media (min-width: 480px) {
    .error-actions {
      flex-direction: row;
    }
  }

  /* Quick Links */
  .error-links {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .error-links-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }

  .error-links-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .error-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.15);
    background: rgba(255, 255, 255, 0.03);
    transition: all 0.2s ease;
  }

  .error-link:hover {
    color: var(--accent);
    border-color: var(--accent);
    background: color-mix(in srgb, var(--accent) 10%, transparent);
  }

  /* Corner Accents */
  .corner-accent {
    position: absolute;
    width: 80px;
    height: 80px;
    pointer-events: none;
    z-index: 10;
  }

  .corner-accent--top-left {
    top: 2rem;
    left: 2rem;
    border-top: 2px solid var(--accent);
    border-left: 2px solid var(--accent);
    opacity: 0.4;
  }

  .corner-accent--bottom-right {
    bottom: 2rem;
    right: 2rem;
    border-bottom: 2px solid var(--accent);
    border-right: 2px solid var(--accent);
    opacity: 0.4;
  }

  @media (max-width: 640px) {
    .corner-accent {
      width: 40px;
      height: 40px;
    }

    .corner-accent--top-left {
      top: 1rem;
      left: 1rem;
    }

    .corner-accent--bottom-right {
      bottom: 1rem;
      right: 1rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .error-code,
    .error-code::before,
    .error-code::after {
      animation: none;
    }
  }
</style>
