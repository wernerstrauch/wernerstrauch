---
export const prerender = true;

import RootLayout from "@layouts/RootLayout.astro";
import Container from "@components/shared/Container.astro";
import Divider from "@components/shared/Divider.astro";
import Footer from "@components/sections/Footer.astro";
import BlogCard from "@components/blog/BlogCard.astro";
import TableOfContents from "@components/blog/TableOfContents.astro";
import { Icon } from "astro-icon/components";
import { getCollection, render, type CollectionEntry } from "astro:content";
import { type SupportedLanguage, getBlogHreflangEntries } from "@lib/i18n";
import { SITE } from "@config";

// Import custom MDX components
import Tip from "@components/blog/Tip.astro";
import Insight from "@components/blog/Insight.astro";
import Warning from "@components/blog/Warning.astro";
import Quote from "@components/blog/Quote.astro";
import BlogImage from "@components/blog/BlogImage.astro";

export async function getStaticPaths() {
  const posts = await getCollection(
    "blog",
    ({ data }: CollectionEntry<"blog">) => !data.draft && data.lang === "en",
  );
  return posts.map((post: CollectionEntry<"blog">) => ({
    params: { slug: post.id.replace(/\.mdx$/, "") },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const {
  title,
  description,
  publishedAt,
  updatedAt,
  author,
  readingTime,
  category,
  tags,
  image,
} = post.data;

// i18n setup
const lang: SupportedLanguage = "en";
const allPostsForHreflang = await getCollection(
  "blog",
  ({ data }: CollectionEntry<"blog">) => !data.draft,
);
const hreflangEntries = getBlogHreflangEntries(
  allPostsForHreflang,
  post,
  SITE.website,
);
// Render MDX content with custom components
const { Content, headings } = await render(post);

// Get related posts (same category, same language, excluding current)
const allPostsSameLang = await getCollection(
  "blog",
  ({ data }: CollectionEntry<"blog">) => !data.draft && data.lang === "en",
);
const relatedPosts = allPostsSameLang
  .filter(
    (p: CollectionEntry<"blog">) =>
      p.data.category === category && p.id !== post.id,
  )
  .sort(
    (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
      b.data.publishedAt.getTime() - a.data.publishedAt.getTime(),
  )
  .slice(0, 3);

// Category config
const categoryConfig: Record<string, { label: string; color: string }> = {
  tutorial: { label: "Tutorial", color: "violet" },
  vergleich: { label: "Comparison", color: "emerald" },
  news: { label: "News", color: "amber" },
  "case-study": { label: "Case Study", color: "blue" },
};

const { label: categoryLabel, color: categoryColor } =
  categoryConfig[category] || categoryConfig.tutorial;

// Format dates
const formattedDate = new Intl.DateTimeFormat("en-US", {
  day: "numeric",
  month: "long",
  year: "numeric",
}).format(publishedAt);

const formattedUpdateDate = updatedAt
  ? new Intl.DateTimeFormat("en-US", {
      day: "numeric",
      month: "long",
      year: "numeric",
    }).format(updatedAt)
  : null;

// Schema.org Article
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: title,
  description: description,
  ...(image && { image: new URL(image.src, Astro.site).href }),
  datePublished: publishedAt.toISOString(),
  dateModified: (updatedAt || publishedAt).toISOString(),
  author: {
    "@type": "Organization",
    name: author,
  },
  publisher: {
    "@type": "Organization",
    name: "Shop Marketing",
    url: Astro.site?.href,
  },
};
---

<RootLayout
  title={`${title} | Blog | Shop Marketing`}
  description={description}
  lang={lang}
  hreflangEntries={hreflangEntries}
>
  {/* Schema.org Article */}
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify(articleSchema)}
  />

  <main class="blog-detail bg-gray-50">
    {/* Hero Section */}
    <section class="blog-detail__hero relative overflow-hidden border-b pt-20">
      <div
        class="blog-detail__gradient pointer-events-none absolute inset-0 -z-10"
        aria-hidden="true"
      >
      </div>

      <Container class="py-12 sm:py-16 lg:py-20">
        {/* Breadcrumbs */}
        <nav class="mb-6" aria-label="Breadcrumb">
          <ol class="blog-detail__breadcrumb flex items-center gap-2 text-sm">
            <li>
              <a
                href="/en"
                class="blog-detail__breadcrumb-link transition-colors"
                aria-label="Home"
              >
                <Icon name="heroicons:home-16-solid" class="h-4 w-4" />
              </a>
            </li>
            <li aria-hidden="true">
              <Icon
                name="heroicons:chevron-right-16-solid"
                class="blog-detail__breadcrumb-separator h-4 w-4"
              />
            </li>
            <li>
              <a
                href="/en/blog"
                class="blog-detail__breadcrumb-link transition-colors"
              >
                Blog
              </a>
            </li>
            <li aria-hidden="true">
              <Icon
                name="heroicons:chevron-right-16-solid"
                class="blog-detail__breadcrumb-separator h-4 w-4"
              />
            </li>
            <li>
              <span class="blog-detail__breadcrumb-current line-clamp-1"
                >{title}</span
              >
            </li>
          </ol>
        </nav>

        {/* Category Badge */}
        <span
          class="blog-detail__category inline-block rounded-full px-3 py-1 text-xs font-medium"
          data-color={categoryColor}
        >
          {categoryLabel}
        </span>

        {/* Title */}
        <h1
          class="blog-detail__title mt-4 text-3xl leading-tight font-bold sm:text-4xl lg:text-5xl"
        >
          {title}
        </h1>

        {/* Meta */}
        <div
          class="blog-detail__meta mt-6 flex flex-wrap items-center gap-4 text-sm"
        >
          <span class="flex items-center gap-2">
            <Icon name="heroicons:user-circle" class="h-5 w-5" />
            {author}
          </span>
          <span class="flex items-center gap-2">
            <Icon name="heroicons:calendar" class="h-5 w-5" />
            {formattedDate}
          </span>
          <span class="flex items-center gap-2">
            <Icon name="heroicons:clock" class="h-5 w-5" />
            {readingTime} min read
          </span>
          {
            formattedUpdateDate && (
              <span class="flex items-center gap-2">
                <Icon name="heroicons:arrow-path" class="h-5 w-5" />
                Updated: {formattedUpdateDate}
              </span>
            )
          }
        </div>
      </Container>
    </section>

    {/* Featured Image */}
    {
      image && (
        <section class="py-8">
          <Container class="max-w-4xl">
            <div class="blog-detail__image-container overflow-hidden rounded-2xl border">
              <img
                src={image.src}
                alt={image.alt}
                class="w-full object-cover"
                loading="eager"
              />
            </div>
          </Container>
        </section>
      )
    }

    {/* Content */}
    <section class="pb-16 sm:pb-20">
      <Container class="max-w-4xl">
        <div class="grid gap-8 lg:grid-cols-[1fr_250px]">
          {/* Main Content */}
          <article class="blog-detail__prose prose max-w-none">
            <Content components={{ Tip, Insight, Warning, Quote, BlogImage }} />
          </article>

          {/* Sidebar (Table of Contents) */}
          <aside class="hidden lg:block">
            <div class="sticky top-24">
              <TableOfContents headings={headings} />
            </div>
          </aside>
        </div>

        {/* Tags */}
        {
          tags && tags.length > 0 && (
            <div class="blog-detail__tags-container mt-12 border-t pt-8">
              <div class="flex flex-wrap items-center gap-2">
                <span class="blog-detail__tags-label text-sm">Tags:</span>
                {tags.map((tag: string) => (
                  <span class="blog-detail__tag rounded-full border px-3 py-1 text-sm">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          )
        }
      </Container>
    </section>

    <Divider />

    {/* Related Posts */}
    {
      relatedPosts.length > 0 && (
        <>
          <section class="py-16 sm:py-20">
            <Container>
              <h2 class="blog-detail__section-title mb-8 text-2xl font-bold">
                More Articles
              </h2>
              <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {relatedPosts.map((relatedPost: CollectionEntry<"blog">) => (
                  <BlogCard post={relatedPost} />
                ))}
              </div>
            </Container>
          </section>
          <Divider />
        </>
      )
    }

    {/* CTA */}
    <section class="py-16 sm:py-20">
      <Container class="max-w-2xl text-center">
        <h2 class="blog-detail__section-title text-2xl font-bold sm:text-3xl">
          Ready for Your AI Transformation?
        </h2>
        <p class="blog-detail__text mt-4">
          Let's find out together how AI agents can optimize your processes.
        </p>
        <a
          href="/en/contact"
          class="blog-detail__cta-button mt-6 inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 text-sm font-medium text-white transition-colors"
        >
          Schedule a Free Consultation
        </a>
      </Container>
    </section>
  </main>

  <Footer />
</RootLayout>

<style>
  @reference "../../../styles/styles.css";

  /* Hero section */
  .blog-detail__hero {
    border-color: var(--color-gray-200);
    background-color: var(--color-white);
  }

  .blog-detail__gradient {
    background: linear-gradient(
      to bottom,
      color-mix(in srgb, var(--primary) 5%, transparent),
      transparent,
      transparent
    );
  }

  /* Breadcrumbs */
  .blog-detail__breadcrumb {
    color: var(--color-gray-500);
  }

  .blog-detail__breadcrumb-link:hover {
    color: var(--primary);
  }

  .blog-detail__breadcrumb-separator {
    color: var(--color-gray-400);
  }

  .blog-detail__breadcrumb-current {
    color: var(--primary);
  }

  /* Category badge - default (violet) */
  .blog-detail__category {
    background: color-mix(in srgb, var(--primary) 15%, transparent);
    color: var(--primary-dark);
  }

  .blog-detail__category[data-color="emerald"] {
    background: rgb(16 185 129 / 15%);
    color: rgb(5 150 105);
  }

  .blog-detail__category[data-color="amber"] {
    background: rgb(245 158 11 / 15%);
    color: rgb(180 83 9);
  }

  .blog-detail__category[data-color="blue"] {
    background: rgb(59 130 246 / 15%);
    color: rgb(29 78 216);
  }

  /* Title */
  .blog-detail__title {
    color: var(--color-gray-900);
  }

  /* Meta */
  .blog-detail__meta {
    color: var(--color-gray-500);
  }

  /* Image container */
  .blog-detail__image-container {
    border-color: var(--color-gray-200);
  }

  /* Prose styling */
  .blog-detail__prose {
    --tw-prose-headings: var(--color-gray-900);
    --tw-prose-body: var(--color-gray-700);
    --tw-prose-links: var(--primary);
    --tw-prose-bold: var(--color-gray-900);
    --tw-prose-bullets: var(--primary);
    --tw-prose-counters: var(--primary);
  }

  .blog-detail__prose :global(h2),
  .blog-detail__prose :global(h3),
  .blog-detail__prose :global(h4) {
    color: var(--color-gray-900);
    font-weight: 700;
  }

  .blog-detail__prose :global(h2) {
    margin-top: 2.5rem;
    font-size: 1.5rem;
  }

  .blog-detail__prose :global(h3) {
    margin-top: 2rem;
    font-size: 1.25rem;
  }

  .blog-detail__prose :global(p) {
    color: var(--color-gray-700);
    line-height: 1.75;
  }

  .blog-detail__prose :global(a) {
    color: var(--primary);
    text-decoration: none;
  }

  .blog-detail__prose :global(a:hover) {
    color: var(--primary-dark);
  }

  .blog-detail__prose :global(strong) {
    color: var(--color-gray-900);
  }

  .blog-detail__prose :global(code) {
    border-radius: 0.25rem;
    background: color-mix(in srgb, var(--primary) 10%, transparent);
    padding: 0.125rem 0.375rem;
    color: var(--primary-dark);
  }

  .blog-detail__prose :global(code::before),
  .blog-detail__prose :global(code::after) {
    content: none;
  }

  .blog-detail__prose :global(pre) {
    border-radius: 0.75rem;
    border: 1px solid var(--color-gray-200);
    background: var(--color-gray-900);
  }

  .blog-detail__prose :global(ul),
  .blog-detail__prose :global(ol) {
    color: var(--color-gray-700);
  }

  .blog-detail__prose :global(li::marker) {
    color: var(--primary);
  }

  /* Tags */
  .blog-detail__tags-container {
    border-color: var(--color-gray-200);
  }

  .blog-detail__tags-label {
    color: var(--color-gray-500);
  }

  .blog-detail__tag {
    border-color: var(--color-gray-200);
    background: var(--color-white);
    color: var(--color-gray-600);
  }

  /* Section titles */
  .blog-detail__section-title {
    color: var(--color-gray-900);
  }

  /* Text */
  .blog-detail__text {
    color: var(--color-gray-600);
  }

  /* CTA Button */
  .blog-detail__cta-button {
    background-color: var(--primary);
  }

  .blog-detail__cta-button:hover {
    background-color: var(--primary-dark);
  }
</style>
